using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp29
{
    class Program
    {

        static double F(string n)
        {
            int Length = n.Length;
            double z = 0;
            double o = 1;

            foreach (Char ch in n) 
            {
                Length--; 
                o = Math.Pow(2, Length);
                if (ch == '1') 
                {
                    z = z + o;
                }
            }
            return z;
        }
        static void Main(string[] args)
        {
            Console.Write("Напишите двоичное число: ");
            string n = Console.ReadLine();

            Console.WriteLine("{0}: {1}", n, F(n)); 
        }
    }
}
